  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "quoteProps": "consistent",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.spec.js", "*.test.js", "*.spec.ts", "*.test.ts"],
